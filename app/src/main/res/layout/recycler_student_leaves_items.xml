<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:strokeWidth="0dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/leave_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Half Day Application"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:textStyle="bold"
                app:fontFamily="@font/fredoka_semi_bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/leave_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/leave_day"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:text="Wed,16 Dec"
                android:textColor="@color/dark_purple"
                android:textSize="18sp"
                android:textStyle="bold"
                app:fontFamily="@font/fredoka_semi_bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/leave_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/leave_date"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp"
                android:text="Causal"
                android:textColor="@color/yellow"
                android:textSize="15sp"
                android:textStyle="bold"
                app:fontFamily="@font/fredoka_semi_bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/leave_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:drawablePadding="6dp"
                android:padding="4dp"
                tools:text="Awaiting"
                android:textColor="@color/dark_yellow"
                android:textSize="12sp"
                android:textStyle="bold"
                app:fontFamily="@font/fredoka_semi_bold" />

            <!--forward arrow-->
            <RelativeLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/leave_status"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/curved_background_grey">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:contentDescription="@null"
                    android:rotation="180"
                    android:src="@drawable/ic_arrow_back_ios_black" />

            </RelativeLayout>

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>